<div class="container">
  <h2>Join Vigap!</h2>
  <div id="results" style="text-align: center"></div>
  <div class="vigform">
    <%= form_for @user do |f| %>
        <div class="field" id="_signup_username">
          <%= f.label :username, 'Nickname' %>
          <%= f.text_field :username %>
          <div class="error-message">
            <%= @user.errors[:username].first %>
          </div>
        </div>
        <div class="field" id="_signup_email">
          <%= f.label :email %>
          <%= f.text_field :email %>
          <div class="error-message">
            <%= @user.errors[:email].first %>
          </div>
        </div>
        <div class="field" id="_signup_password">
          <%= f.label :password %>
          <%= f.password_field :password %>
          <div class="error-message">
            <%= @user.errors[:password].first %>
          </div>
        </div>
        <div>
          By registering, you agree to our <%= link_to 'Terms & Privacy', post_path(id: 'vigap-terms-privacy') %>.
        </div>
        <div class="action">
          <%= f.submit 'Register', class: 'btn btn-info', id: '_signup_signin' %>
        </div>
        <div class="text-center">or</span>
        <div class="text-center">
          <%= link_to "Sign in with Facebook", "/auth/facebook", id: 'facebook_sign_up' %>
        </div>
  <% end %>
  </div>
</div>
