<p>Just one post here</p>
<%= @post.title  %>
<%= @post.body  %>
<div>
 <% if current_user %>
 <div>
   <p>Positive votes:</p><p id="up"><%= @post.cached_votes_up %></p>
 </div>
 <div>
   <p>Negative votes:</p><p id="down"> <%= @post.cached_votes_down %></p>
  </div>
<p>vote here:</p>
      <%= link_to 'up', up_post_path(@post), method: :put, remote: true, id: 'link_up' %> ||
      <%=link_to 'down', down_post_path(@post), method: :put, remote: true, id: 'link_down' %>
</div>


<%= link_to 'go to root page', root_url %>
    <div class="allert">
      <h3>Add a new Comment!</h3>
      <%= form_for [@post, @post.comments.build] do|f| %>
        <%= f.label :body %>
        <%= f.text_area :body %>
      </br>
      <%= f.submit 'Add a new amazing and cool comment here!' %>
      <% end %>
    </div>
<% end %>
    <% if @post.list_of_comments %>
      <%= link_to 'update mode comments', root_url %>

      <% @post.list_of_comments.each do |comment| %>
            <div>
              <p id="comment_body">
                <%= comment.body %>
                <%= comment.id %>
                <%= comment.user.try(:username) %>
              </p>
            </div>
            <div>
        <% end %>
    <% end %>
</div>
